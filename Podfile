    pod 'RxCocoa'
    pod 'SQLite.swift'
    pod 'SVProgressHUD'
    pod 'MJRefresh'
    pod 'SGPagingView'
    pod 'BMPlayer'
    pod 'FDFullscreenPopGesture'
    # pod 'Texture'
    pod 'lottie-ios'
    pod 'AdobeMobileSDK'
    pod 'SwiftLint'
    
    target 'HeadNews'
    target 'NewsLib'
end
